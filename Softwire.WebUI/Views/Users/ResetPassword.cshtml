@model Softwire.WebUI.Models.Account.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";

    string fullName = ViewBag.FullName;
    string fullName_panel = @"<div class=""form-control-static"">" + ViewBag.FullName + "</div>";
    string userId = ViewContext.RouteData.Values["id"].ToString();
}

<!-- Start Page Title -->
<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <h2>@ViewBag.Title</h2>
               
                <p>
                    Set the user a Temporary Password
                </p>

                @Html.Bootstrap().ActionLinkButton("Back", "Index", "Users")
            </div>
        </div>
    </div>

    <div class="shape1"><img src="~/Content/assets/img/shape1.png" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape3"><img src="~/Content/assets/img/shape3.svg" alt="shape"></div>
    <div class="shape4"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape5"><img src="~/Content/assets/img/shape5.png" alt="shape"></div>
    <div class="shape6 rotateme"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape7"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape8 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
</div>
<!-- End Page Title -->


<!-- Start Quote Area -->
<section class="contact-area ptb-80">
    <div class="container">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-lg-12 col-md-12">

                @using (var f = Html.Bootstrap().Begin(new Form()))
                {
                    <div class="container">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(m => m.Email)
                        <div class="row">
                            <div class="col-md-5">
                                <aside class="panel-summary">
                                    <h3>User details</h3>
                                    <dl class="dl-horizontal">
                                        <dt>Full name</dt>
                                        <dd>@fullName</dd>
                                    </dl>
                                </aside>
                            </div>
                            <div class="col-md-6 col-md-offset-1">
                                <div class="form-light-bg">
                                    <h3 class="form-heading">Change Password</h3>
                                    <div class="alert alert-warning">
                                        Password must contain at least one uppercase character and one number
                                    </div>
                                    @f.FormGroup().PasswordFor(m => m.Password).Placeholder("Enter new password")
                                    @f.FormGroup().PasswordFor(m => m.ConfirmPassword).Placeholder("Confirm new password")
                                    <div class="form-group form-group-submit">
                                        @Html.Bootstrap().SubmitButton().Style(ButtonStyle.Default).ButtonBlock().Text("Reset Password").AppendIcon("glyphicon glyphicon-thumbs-up")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
<!-- End Quote Area -->

