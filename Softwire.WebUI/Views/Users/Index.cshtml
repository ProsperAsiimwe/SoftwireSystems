@model Softwire.WebUI.Models.Users.UserListViewModel
@{
    ViewBag.Title = PageData["pageTitle"];
    string roleName = PageData["roleName"];
    string roleTitle = PageData["roleTitle"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string companyName = Settings.COMPANY_NAME;
}
<section class="contact-area ptb-80">
    <div class="container">
        <div class="section-title">
            <h2>Site Administrators</h2>
            <div class="bar"></div>   
            @Html.Bootstrap().ActionLinkButton("New " + roleTitle, "New").RouteValues(new { roleName = roleName }).Style(ButtonStyle.Primary).AppendIcon("fa fa-plus")
        </div>

        <div class="row h-100 justify-content-center align-items-center">

            @*@Html.Partial("Partials/_SearchUsers", Model.SearchModel)*@

            <div class="col-lg-12 col-md-12">
                <div class="table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Full Name</th>
                                <th>Email Address</th>
                                <th>Active?</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Users.Count() > 0)
                            {
                                foreach (var item in Model.Users)
                                {
                                    <tr>
                                        <td>@Html.Bootstrap().ActionLinkButton("View", "Show", "Users").RouteValues(new { roleName = roleName, @id = item.DisplayId }).Style(ButtonStyle.Info)</td>
                                        <td>@Html.ActionLink(String.Format("{1}, {0}", item.FirstName, item.LastName), "Show", "Users", routeValues: new { roleName = roleName, @id = item.DisplayId }, htmlAttributes: null)</td>
                                        <td>@Html.EmailLink(item.Email)</td>
                                        <td>@InputHelper.ParseBool(item.EmailConfirmed)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="clearfix">
                <div class="pull-right">
                    <div class="pagination-panel">
                        <div class="pagination-labels">@Model.PagingInfo.ItemsFrom to @Model.PagingInfo.ItemsTo of @Model.PagingInfo.TotalItems users</div>
                        @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", "Users", new { page = x }))
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="shape1"><img src="~/Content/assets/img/shape1.png" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape3"><img src="~/Content/assets/img/shape3.svg" alt="shape"></div>
    <div class="shape4"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape5"><img src="~/Content/assets/img/shape5.png" alt="shape"></div>
    <div class="shape6 rotateme"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape7"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape8 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
</section>













