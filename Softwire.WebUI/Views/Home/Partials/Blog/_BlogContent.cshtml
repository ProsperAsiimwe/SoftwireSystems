@model Softwire.WebUI.Models.BlogPosts.BlogPostViewModel
@using Softwire.Domain.Context 
<!-- Start Page Title -->
<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <h2>Blog</h2>
            </div>
        </div>
    </div>

    <div class="shape1"><img src="~/Content/assets/img/shape1.png" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape3"><img src="~/Content/assets/img/shape3.svg" alt="shape"></div>
    <div class="shape4"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape5"><img src="~/Content/assets/img/shape5.png" alt="shape"></div>
    <div class="shape6 rotateme"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape7"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape8 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
</div>
<!-- End Page Title -->

<!-- Start Blog Area -->
<section class="blog-area ptb-80">
    <div class="container">
        <div class="row">

            @using (var ctx = new ApplicationDbContext())
            {

                foreach (var blogPost in ctx.BlogPosts)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-blog-post">
                            <div class="blog-image">
                                <a href="">
                                    @if (blogPost.FileName != null)
                                    {
                                        <img src="@Url.Content(blogPost.FolderPath)" alt="image">
                                    }
                                    else
                                    {
                                        <img src="~/Content/assets/img/extra-image/blogging.png" alt="image">
                                    }

                                </a>

                                <div class="date">
                                    <i data-feather="calendar"></i> @blogPost.Date 
                                </div>
                            </div>

                            <div class="blog-post-content">
                                <h3><a href="">@blogPost.Title</a></h3>

                                <span>by <a href="">@blogPost.Author</a></span>
                              
                                    <p>@blogPost.Content</p>
                                                              
                            </div>
                        </div>
                    </div>
                }
            }



            @*<div class="col-lg-12 col-md-12">
                <div class="pagination-area">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">

                            <li class="page-item"><a class="page-link" href="#">Prev</a></li>

                            <li class="page-item active"><a class="page-link" href="#">1</a></li>

                            <li class="page-item"><a class="page-link" href="#">2</a></li>

                            <li class="page-item"><a class="page-link" href="#">3</a></li>

                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
            </div>*@
        </div>
    </div>
</section>
<!-- End Blog Area -->
