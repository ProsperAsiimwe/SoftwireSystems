@model Softwire.WebUI.Models.SupportRequests.SupportRequestViewModel

<!-- Start Page Title -->
<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <h2>Support</h2>
            </div>
        </div>
    </div>

    <div class="shape1"><img src="~/Content/assets/img/shape1.png" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape3"><img src="~/Content/assets/img/shape3.svg" alt="shape"></div>
    <div class="shape4"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape5"><img src="~/Content/assets/img/shape5.png" alt="shape"></div>
    <div class="shape6 rotateme"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape7"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape8 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
</div>
<!-- End Page Title -->
<!-- Start Quote Area -->
<section class="contact-area ptb-80">
    <div class="container">
        <div class="section-title">
            <h2>Welcome to Customer Support</h2>
            <div class="bar"></div>
            <p>Having touble with our product(s) and/or service(s) ? Please inform us and we will do our best to assist you.</p>
        </div>

        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-lg-6 col-md-12">
                <img src="~/Content/assets/img/support2.png" alt="image">
                <img src="~/Content/assets/img/support.png" alt="image">
            </div>

            <div class="col-lg-6 col-md-12">

                @using (Html.BeginForm("Support", "Home", new { id = "" }))
                {
                    <div class="row">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.Bootstrap().TextBoxFor(m => m.Name).Placeholder("Please enter your names").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.Bootstrap().TextBoxFor(m => m.Organization).Placeholder("Please enter the organization you represent").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                @Html.ValidationMessageFor(m => m.Organization, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.Bootstrap().TextBoxFor(m => m.Email).Placeholder("Please enter your email").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "email", required = "" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.Bootstrap().TextBoxFor(m => m.Phone).Placeholder("Please enter your phone number").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.Bootstrap().TextBoxFor(m => m.ProductOrService).Placeholder("Please enter the product(s) and/or service(s) of interest to you.").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                @Html.ValidationMessageFor(m => m.ProductOrService, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.Bootstrap().TextAreaFor(m => m.Description).Placeholder("Please enter the description of the product(s) and/or service(s) of interest to you.").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })

                            </div>
                        </div>


                        <div class="col-lg-12 col-md-12">
                            @Html.Bootstrap().SubmitButton().Class("btn btn-primary").Text("Submit Request").AppendIcon("glyphicon glyphicon-thumbs-up")
                            <div class="clearfix"></div>
                        </div>
                    </div>

                }



            </div>
        </div>
    </div>
</section>
<!-- End Quote Area -->